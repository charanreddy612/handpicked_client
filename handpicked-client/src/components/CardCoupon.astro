---
type Coupon = {
  id: string | number;
  title?: string | null;
  code?: string | null;
  ends_at?: string | null;
  merchant_name?: string | null;
};

const { coupon } = Astro.props as { coupon: Coupon };
const ends = coupon.ends_at ? new Date(coupon.ends_at) : null;
const endsText = ends ? `ends ${ends.toLocaleDateString()}` : null;
---

<div class = "bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <div class="flex justify-between items-start">
    <div>
      <h3 class="text-lg font-bold text-gray-800">{coupon.title || "Deal"}</h3>
      {
        coupon.merchant_name && (
          <p class="text-xs text-gray-600">{coupon.merchant_name}</p>
        )
      }
      {endsText && <p class="text-xs text-gray-500 mt-1">{endsText}</p>}
    </div>
    <div>
      {
        coupon.code ? (
          <span class="flex-grow border border-gray-300 rounded-l-md px-3 py-2 text-sm">
            {" "}
            Code: {coupon.code}{" "}
          </span>
        ) : (
          <span class="inline-block text-xs border px-2 py-1 rounded">
            {" "}
            Activate{" "}
          </span>
        )
      }
    </div>
  </div>
</div>
