---
import HeaderSearchIsland from "../components/islands/HeaderSearchIsland.jsx";

const nav = [
  { href: "/stores", label: "Stores" },
  { href: "/coupons", label: "Coupons" },
  { href: "/blogs", label: "Blogs" },
];
---

<header id="top" class="w-full border-b border-gray-200 bg-white">
  <div class="container py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.png" alt="SavingHarbor" width="36" height="36" />
      <span class="font-semibold text-lg tracking-tight text-brand-primary">
        Saving Harbor
      </span>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden md:flex items-center gap-6">
      <HeaderSearchIsland client:load />
      {
        nav.map((n) => (
          <a
            href={n.href}
            class="text-sm text-brand-secondary hover:text-brand-primary transition"
          >
            {n.label}
          </a>
        ))
      }
    </nav>

    <!-- Mobile -->
    <div class="md:hidden">
      <a
        href="/stores"
        class="btn btn-outline"
      >
        Browse
      </a>
    </div>
  </div>
</header>
