---
import HeaderSearchIsland from "../components/islands/HeaderSearchIsland.jsx";

const nav = [
  { href: "/stores", label: "Stores" },
  { href: "/coupons", label: "Coupons" },
  { href: "/blogs", label: "Blogs" },
];
---

<header id="top" class="w-full border-b border-gray-200 bg-white shadow-sm">
  <div class="container mx-auto px-4 py-3 flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.png" alt="SavingHarbor" width="40" height="40" class="rounded-sm" />
      <span class="font-bold text-lg tracking-tight text-brand-primary">Saving Harbor</span>
    </a>

    <!-- Search -->
    <div class="w-full md:flex-1 md:px-6">
      <div class="bg-white border border-gray-100 rounded-xl shadow px-3 py-2">
        <HeaderSearchIsland client:load />
      </div>
    </div>

    <!-- Nav -->
    <nav class="flex justify-center gap-4 flex-wrap">
      {nav.map((n) => (
        <a
          href={n.href}
          class="text-sm font-medium text-slate-700 hover:text-brand-primary px-3 py-2 rounded-md transition"
        >
          {n.label}
        </a>
      ))}
    </nav>
  </div>
</header>
