---
type Crumb = { name: string; url: string };
const { breadcrumbs = [] as Crumb[] } = Astro.props as {
  breadcrumbs?: Crumb[];
};
---

{
  breadcrumbs.length > 0 && (
    <nav aria-label="Breadcrumb" class="text-sm text-gray-600">
      {" "}
      <ol class="flex items-center gap-2">
        {" "}
        {breadcrumbs.map((b, i) => (
          <li class="flex items-center gap-2">
            {" "}
            <a href={b.url} class="hover:underline">
              {b.name}
            </a>{" "}
            {i < breadcrumbs.length - 1 && <span class="text-gray-400">/</span>}{" "}
          </li>
        ))}{" "}
      </ol>{" "}
    </nav>
  )
}
