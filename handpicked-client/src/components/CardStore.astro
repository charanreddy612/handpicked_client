---
type Store = {
  id: string | number;
  slug: string;
  name: string;
  logo_url?: string | null;
  category_names?: string[];
};

const { store } = Astro.props as { store: Store };
---

<a
  href={`/stores/${store.slug}`}
  class="block border rounded-lg p-4 hover:shadow-sm transition"
>
  <div class="flex items-center gap-4">
    <div
      class="w-14 h-14 flex items-center justify-center border rounded overflow-hidden bg-white"
    >
      {
        store.logo_url ? (
          <img
            src={store.logo_url}
            alt={store.name}
            width="56"
            height="56"
            loading="lazy"
            class="object-contain"
          />
        ) : (
          <div class="text-[10px] text-gray-400">Logo</div>
        )
      }
    </div>
    <div class="min-w-0">
      <h3 class="font-semibold truncate">{store.name}</h3>
      {
        store.category_names && store.category_names.length > 0 && (
          <p class="text-xs text-gray-600 truncate">
            {" "}
            {store.category_names.join(", ")}{" "}
          </p>
        )
      }
    </div>
  </div>
</a>
